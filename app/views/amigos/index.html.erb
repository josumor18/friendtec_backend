<p id="notice"><%= notice %></p>

<h1>Amigos</h1>

<table>
  <thead>
    <tr>
      <th>Id user1</th>
      <th>Id user2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amigos.each do |amigo| %>
      <tr>
        <td><%= amigo.id_user1 %></td>
        <td><%= amigo.id_user2 %></td>
        <td><%= link_to 'Show', amigo %></td>
        <td><%= link_to 'Edit', edit_amigo_path(amigo) %></td>
        <td><%= link_to 'Destroy', amigo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

